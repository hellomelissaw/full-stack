doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login & Game Files
    link(rel="stylesheet", href="/static/loginPage.css")
  body
    .image-box
      img.image-box-img(src="/static/logintree.png", alt="Forest Image")
    .sign
      span welcome to the forest
    .login
    form.login(method="POST", action="/log-in")
    input(type="text", id="username", placeholder="Username")
    input(type="text", id="password", placeholder="Password")

    h3(style="margin-bottom: 5px;") Welcome
    h3(style="margin-top: 5px;") please login using your username
    button(type="submit") Create Account
    ul#gameFiles
