doctype html
html 
  head 
    meta(charset="UTF-8")
    title = "Insert Location"
  body 
    h1 Insert New Location 
    form(action="/insert-location" method="post")
      label(for="name") Name:
      input(type="text" id="name" name="name" required)
      br
      label(for="emojis") Emojis:
      input(type="text" id="emojis" name="emojis")
      br
      label(for="connections") Connections (ID's separated by commas):
      input(type="text" id="connections" name="connections")
      br
      button(type="submit") Insert
